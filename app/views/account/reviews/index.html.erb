<div class="col-md-12">

  <h2 class="text-center"> 我发表过的影评 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> 影评内容 </th>
        <th> 电影名称 </th>
        <th> 更新时间 </th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @reviews.each do |review| %>
        <tr>
          <td> <%= review.content %> </td>
          <td> <%= review.movie_group.title %> </td>
          <td> <%= review.updated_at %> </td>
          <td> <%= link_to('编辑', edit_movie_group_review_path(review.movie_group, review), class: "btn btn-default btn-xs") %></td>
          <td> <%= link_to('删除', movie_group_review_path(review.movie_group, review), method: :delete, data: { confirm: "确定要删除吗?" }, class: "btn btn-default btn-xs") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
