<div class="col-md-4 col-md-offset-4">
    <h2>新增电影</h2>

    <hr>
    <%= form_for @movie_group do |f| %>

    <% if @movie_group.errors.any? %>
    <ul>
      <% @movie_group.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
    <% end %>

    片名
    <%= f.text_field :title %>
    <br>
    详情
    <br>
    <%= f.text_area :description %>
    <br>

    <%= f.submit "Submit", :disable_with => 'Submiting...' %>
    <% end %>

</div>
